<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="594.0" prefWidth="1080.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="co.edu.uniquindio.poo.controller.ClienteVehiculoController">
  <!-- Título de la ventana -->
  <!-- Tabla principal de vehículos -->
  <!-- Barra inferior -->
  <bottom>
    <HBox alignment="CENTER" prefHeight="41.0" prefWidth="1014.0" spacing="10.0" style="-fx-background-color: #3A6EA5;">
      <Button fx:id="btnSalir" onAction="#salir" style="-fx-background-color: #F44336; -fx-text-fill: white;" text="Salir" />
    </HBox>
  </bottom>
  <center>
    <VBox spacing="10.0">
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Vehículos Disponibles" />
      <TableView fx:id="vehiculoTable">
        <columns>
          <TableColumn text="Código" fx:id="codigoColumn" />
          <TableColumn text="Marca" fx:id="marcaColumn" />
          <TableColumn text="Modelo" fx:id="modeloColumn" />
          <TableColumn text="Estado" fx:id="estadoColumn" />
          <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="156.0" text="Tipo Combustión" fx:id="combustionColumn" />
          <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="168.0" text="Transmisión" fx:id="transmisionColumn" />
          <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="147.0" text="Cilindraje" fx:id="cilindrajeColumn" />
          <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="101.0" text="Velocidad Máxima" fx:id="velocidadMaxColumn" />
          <TableColumn maxWidth="5000.0" minWidth="10.0" prefWidth="189.0" text="Número Cambios" fx:id="cambiosColumn" />
        </columns>
      </TableView>
      <HBox alignment="CENTER" spacing="10.0">
        <Button fx:id="btnComprarVehiculo" onAction="#comprarVehiculo" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Comprar Vehículo" />
        <Button fx:id="btnAlquilarVehiculo" onAction="#alquilarVehiculo" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Alquilar Vehículo" />
        <Button fx:id="btnVenderVehiculo" onAction="#venderVehiculo" style="-fx-background-color: #FFC107; -fx-text-fill: black;" text="Vender Vehículo" />
        <Button fx:id="btnVerDetallesVehiculo" onAction="#verDetallesVehiculo" style="-fx-background-color: #8E44AD; -fx-text-fill: white;" text="Ver Detalles" />
      </HBox>
    </VBox>
  </center>
  <top>
    <Label alignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-background-color: #3A6EA5; -fx-text-fill: white;" text="Gestión de Vehículos por Cliente" />
  </top>
</BorderPane>